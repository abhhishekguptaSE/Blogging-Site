<!DOCTYPE html>
<html>

<head>
    <title>
        <%= blog.title %>
    </title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>

<body>
    <h1>
        <%= blog.title %>
    </h1>
    <p>
        <%= blog.content %>
    </p>
    <h2>Comments</h2>
    <ul>
        <% comments.forEach(comment=> { %>
            <li>
                <%= comment.text %>
            </li>
            <% }); %>
    </ul>
    <form action="/comment/<%= blog.id %>" method="post">
        <input type="text" name="comment" placeholder="Add a comment">
        <button type="submit">Submit</button>
    </form>
</body>

</html>